---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<link rel="canonical" href={canonicalURL} />

		<title>{title}</title>
		<meta name="description" content="Silbert Seguros - Asesoramiento integral en seguros patrimoniales, vida y ART. Más de 30 años protegiendo tu futuro en Buenos Aires." />
		<meta name="keywords" content="gestoria, seguros, automotor, tramites, buenos aires, silbert, seguro auto, seguro hogar" />
		<meta name="author" content="Silbert Seguros" />

		<meta property="og:title" content={title} />
		<meta property="og:description" content="¿Necesitas asegurar tu auto o tu casa? Asesoramiento profesional, rápido y humano. Cotizá ahora." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://silbertseguros.com.ar" />
		<meta property="og:image" content="https://silbertseguros.com.ar/oficina.jpg" />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">

		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "InsuranceAgency",
				"name": "Silbert Seguros",
				"image": "https://silbertseguros.com.ar/logo.png",
				"description": "Asesoramiento integral en seguros y gestoría automotor.",
				"telephone": "+5491158778821",
				"address": {
					"@type": "PostalAddress",
					"streetAddress": "Montañeses 1892",  
					"addressLocality": "Belgrano",
					"addressRegion": "Buenos Aires",
					"postalCode": "1428",
					"addressCountry": "AR"
					},
				"priceRange": "$$",
				"openingHoursSpecification": [
					{
					"@type": "OpeningHoursSpecification",
					"dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
					"opens": "10:00",
					"closes": "16:30"
					}
				]
			}
		</script>
	</head>
	<body>
		
		<Navbar />
		<slot />
		<Footer />

	</body>
</html>

<style is:global>
	/* Reseteo básico */
	*, *::before, *::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		scroll-padding-top: 50px; 
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Montserrat', sans-serif;
		background-color: #ffffff;
		overflow-x: hidden; 
		padding-top: 67px; 
	}
	
	img {
        max-width: 100%;
        height: auto;
    }
</style>