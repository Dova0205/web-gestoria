<style>
  .services-section {
    padding: 4rem 0;
    background-color: #f8f9fa;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  h2 {
    color: #003366;
    font-size: 2.2rem;
    margin-bottom: 0.5rem;
  }

  .divider {
    width: 50px;
    height: 3px;
    background-color: #ff4500;
    margin: 1rem auto;
  }

  .grid {
    display: grid;
    /* Ajuste matem치tico para que entren m치s cajas por fila */
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 15px;
  }

  .service-card {
    background: white;
    padding: 1.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    border: 1px solid #e0e0e0;
    transition: all 0.2s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.03);
  }

  .service-card:hover {
    transform: translateY(-3px);
    border-color: #003366;
    box-shadow: 0 5px 15px rgba(0,51,102,0.1);
  }

  .service-card:hover h3 {
    color: #ff4500;
  }

  .icon-wrapper {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
    color: #003366;
    background-color: #f0f4f8;
    border-radius: 50%;
  }

  .icon {
    width: 28px;
    height: 28px;
  }

  h3 {
    color: #003366;
    font-size: 0.95rem;
    margin: 0;
    font-weight: 700;
    line-height: 1.2;
    transition: color 0.2s;
  }
</style>